---
import Header from '../components/Header.astro';
import 'aos/dist/aos.css';
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>Sebastian Begazo — Portfolio</title>
		<link href="https://fonts.googleapis.com/css2?family=Onest:wght@100..900&display=swap" rel="stylesheet">
	</head>
	<body class="bg-[#050505] text-white overflow-x-hidden">
		<div class="fixed top-0 z-[-2] h-screen w-screen bg-[#050505] bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"></div>
		
		<Header />
		<slot />

		<script>
			import AOS from 'aos';
			import 'aos/dist/aos.css';

			AOS.init({
				duration: 800,   
				once: false,     
				mirror: true,    
				offset: 50,      
			});
		</script>
	</body>
</html>

<style is:global>
	:root { color-scheme: dark; }
	html {
		font-family: "Onest", system-ui, sans-serif;
		scroll-behavior: smooth;
	}
	body { margin: 0; min-height: 100vh; }

	/* Ajuste de scroll para que el Header no tape los títulos */
	section { scroll-margin-top: 100px; }
	#inicio { scroll-margin-top: 150px; }
</style>